# fix PATH before all
export PATH=/Users/vladimirmikhailov/code/go/bin:/usr/local/bin:${PATH%:/usr/local/bin}

# shortcut to this dotfiles path is $DOTFILES
export DOTFILES=$HOME/.dotfiles

# your project folder that we can `s<tab>` to
export PROJECTS=~/src

# use .localrc for SUPER SECRET CRAP that you don't
# want in your public, versioned repo.
if [[ -a ~/.localrc ]]
then
  source ~/.localrc
fi

# load the path files
for file in $DOTFILES/**/*.bash
do
  source "$file"
done

export NVM_DIR=~/.nvm
export GOPATH=/Users/vladimirmikhailov/code/go

. $HOME/.asdf/asdf.sh
. $HOME/.asdf/completions/asdf.bash
